@model WeChatHelloWorld1.Models.User_CustomerInfo

@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>用户注册</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="weui-cells weui-cells_form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="weui-cell">
            <div class="weui-cell__hd">
                <label class="weui-label">用户名称 <span class="tips">*</span></label>
            </div>
            <div class="weui-cell__hd">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="weui-cell">
            <div class="weui-cell__hd">
                <label class="weui-label">联系电话 <span class="tips">*</span></label>
            </div>
            <div class="weui-cell__hd">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="weui-cell">
            <div class="weui-cell__hd">
                <label class="weui-label">联系地址 <span class="tips">*</span></label>
            </div>
            <div class="weui-cell__hd">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="weui-btn-area">
            <a class="weui-btn weui-btn_primary" href="javascript:doSubmit()" id="showDialog">确定</a>
        </div>
    </div>
}

<script>

    function doSubmit() {
        if ($("#CustomerName").val() == "") {
            alert("请输入姓名");
            return;
        }

        if ($("#PhoneNumber").val() == "") {
            alert("请输入电话号码");
            return;
        }

        if ($("#Address").val() == "") {
            alert("请输入地址");
            return;
        }

        $("#frm").submit();
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
