        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd">
            客户名字
        </div>
        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-cell">
