        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd">
            送货地址
        </div>
        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.DeliveryAdress, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.DeliveryAdress, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-btn-area">
        <a class="weui-btn weui-btn_primary" href="javascript:doSubmit()" id="showDialog">确定</a>
    </div>
</div>
}

<script>

    function doSubmit()
    {
        $("#frm").submit();
    }
</script>

<div>
