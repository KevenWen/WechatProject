        </div>

        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.CourierPhone, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.CourierPhone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd">
