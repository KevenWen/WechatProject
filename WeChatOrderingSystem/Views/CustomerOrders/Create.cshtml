    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd">
            派送员名字
        </div>

        <div class="weui-cell__bd">
            @Html.EditorFor(model => model.CourierName, new { htmlAttributes = new { @class = "weui-input weui-rt-input" } })
            @Html.ValidationMessageFor(model => model.CourierName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd">
